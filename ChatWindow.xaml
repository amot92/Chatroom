<Window x:Class="ChatClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="ChatWindow" Height="450" Width="800"
        KeyDown="OnKeyDownHandler"
        >
    <Grid>
        <TextBlock x:Name="chatBox" Background="AliceBlue" HorizontalAlignment="Stretch" Margin="50, 50, 50, 150" TextWrapping="Wrap" VerticalAlignment="Stretch"/>
        <TextBox x:Name="sendBox" HorizontalAlignment="Stretch" Height="20" Margin="50, 130" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" Width="auto"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="75" Click="SendButton_Click"/>
        <Button x:Name="logoutButton" Content="Logout" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom" Width="75" Click="LogoutButton_Click"/>
        <Label x:Name="nameLabel" Content="Label" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
