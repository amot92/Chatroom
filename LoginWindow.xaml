<Window x:Class="ChatClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="nameLabel" Content="User Name" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passLabel" Content="Password" HorizontalAlignment="Left" Margin="200,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Margin="290,100,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="290,150,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="300,200,0,0" VerticalAlignment="Top" Width="75" Click="Login_Click" />
        <Button x:Name="RegisterButton" Content="New User" HorizontalAlignment="Left" Margin="300,224,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click"/>
    </Grid>
</Window>
